{{#section 'header'}}
    <title>Milk Tea Labs | Cart</title>
    <a rel="stylesheet" href="./css/cart.css">
    <style>
      html {
        font-size: 62.5%; /* 16px * 62.5 = 10px = 1rem */
        box-sizing: border-box;
      }

      body {
        font: 1.6rem Helvetica;
        height: 100vh;
        margin: 0;
      }

      button {
        font-size: 1.6rem;
        text-align: center;
      }

      .full-width {
        width: 100%;
      }

      #root {
        height: 100%;
      }

      .grid-container {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 5rem 1fr 5rem;
        height: 100%;
      }
      /* Cart */

      .cart {
        display: flex;
        flex-wrap: wrap;
        margin: 1rem;
        align-items: flex-start;
      }

      .cart-list {
        flex: 3 1 60rem;
      }

      .cart-action {
        flex: 1 1 20rem;
        background-color: #dfe6e6;
        border-radius: .5rem;
        padding: 1rem;
      }

      .cart-list-container {
        list-style-type: none;
        padding: 1rem;
      }

      .cart-list-container li{
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 1rem;
        border-bottom: .1rem #808080 solid;
      }

      .cart-list-container li img {
        max-width: 10rem;
        max-height: 10rem;
      }

      .cart-list-container li:first-child {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
      }

      .cart-image {
        flex: 1 1;
      }

      .cart-name {
        flex: 8 1;
      }

      .cart-price{
        flex: 1 1;
        font-size: 2.5rem;
        text-align: right;
      }
      .button {
        padding: 1rem;
        border: .1rem #1954d4 solid;
        border-radius: 0.5rem;
        cursor: pointer;
        display: flex;
        text-align-last: center;
        align-items: center;
      }

      .delete-button {
        padding: 1rem;
        border: .1rem #1945d4 solid;
        border-radius: 0.3rem;
        cursor: pointer;
        display: flex;
        text-align-last: center;
        align-items: center;
        line-height: 0.01rem;
        padding: 0.1;
      }

      button:hover {
        border: .1rem #f07707 solid;
        background-color: rgb(255, 166, 0);
      }
    </style>
    <script>
      function removeFromCart() {
        ;
      }
      function checkout() {
        ;
      }
    </script>
{{/section}}

<div class="grid-container">
  <main class="main">
    <div class="cart">
        <div class="cart-list">
          <ul class="cart-list-container">
            <li>
              <h3>Cart</h3>
              <div>Price</div>
            </li>
            {{!--  If cart is empty, show promt? --}}
            <li>
                <img class="cart-img" src="img/tea2.jpg" alt="picture"/>
                <div class="cart-name">
                  <div class="cart-name">
                    Item name: Milk Tea Pearl
                  </div>
                  <div>
                    Qty:
                    {{!-- OnChange quantity Function --}}
                    <select>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                    </select>
                    <br><br>
                    <button type="button" class="delete-button" onClick="removeFromCart()">
                      Delete
                    </button>
                    <br>
                  </div>
                </div>
                <div class="cart-price">
                  Php 180
                </div>
            </li>
            <li>
                <img class="cart-img" src="img/tea2.jpg" alt="picture"/>
                <div class="cart-name">
                  <div class="cart-name">
                    Item name: Milk Tea Pearl
                  </div>
                  <div>
                    Qty:
                    {{!-- OnChange quantity Function --}}
                    <select>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                    </select>
                    <br><br>
                    <button type="button" class="delete-button" onClick="removeFromCart()">
                      Delete
                    </button>
                    <br>
                  </div>
                </div>
                <div class="cart-price">
                  Php 180
                </div>
            </li>
          </ul>
        </div>
        <div class="cart-action">
          {{!-- calculation should be done here --}}
          <h3>
            Subtotal: Php 300
          </h3>
          <button onClick="checkout()" class="button primary full-width">Proceed to Checkout</button>
        </div>
    </div>
  </main>
</div>