{{#section 'header'}}
    <title>Milk Tea Labs | Cart</title>
    <a rel="stylesheet" href="/css/cart.css">
{{/section}}

<div class="cart">
    <div class="cart-list">
      <ul class="cart-list-container">
        <li>
          <h3>Cart</h3>
          <div>Price</div>
        </li>  
            {{!-- cartItems.length === 0 ? --}}
            <div>
              Cart is empty
            </div>
            {{!-- :
            cartItems.map( item => --}}
              <li> 
                  <div class="cart-image">
                    <img src={{item.image}} alt="product" />
                  </div>
                  
                  <div class="cart-name">
                    <div>
                      <a href={{"/product/" + item.product}}>
                        {{item.name}}
                      </a>
                    </div>
                    <div>
                      <button type="button" class="button" onClick={{() => removeFromCartHandler(item.product)}}>
                        Delete
                      </button>
                    </div>
                  </div>
                  <div class="cart-price">
                    Php {{item.price}}
                  </div>
              </li>
      </ul>

    </div>
    <div class="cart-action">
        <h3>
          Subtotal {{cartItems.reduce((a, c) => a + c.qty, 0)}} item
          Php {{cartItems.reduce((a,c) => a + c.price * c.qty, 0)}}
        </h3>
        <button onClick={{checkoutHandler}} class="button primary full-width">
          Proceed to Checkout
        </button>
    </div>

  </div>