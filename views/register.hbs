{{#section 'header'}}
    <title>Milk Tea Labs | Register</title>
    <link rel="stylesheet" href="/css/LogReg.css">
{{/section}}

{{> messages}}

<form method='POST' name="register" action='/register' class="logRegForm">
    <div class="imgCont">
        <img src="img/logo3.png" class="LoginReg">
    </div>

    <div class="inputsCont">
      
        <label for="name"><b>Name</b></label><br>
        <input type="text" placeholder="Name" name="name" required> 

        <label for="username"><b>Username</b></label>
        <input type="text" placeholder="Username" name="username" required>
                
        <label for="address"><b>Address</b></label>
        <input type="text" placeholder="Address" name="address" required>

        <label for="password1"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password1" required>

        <label for="password2"><b>Confirm Password</b></label>
        <input type="password" placeholder="Confirm Password" name="password2" required>

        <button type="submit" id="btnRegister" class="btn btn-primary btnLogReg">Create Account</button>
    </div>

    <div class="logregSwitch">
        <span class="signIn">Already have an account?<a href="login"> Sign In</a></span>
    </div>
</form>
