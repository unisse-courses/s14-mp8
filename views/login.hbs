<form action="/login" method="get" class="loginForm">
  <div class="imgCont">
    <img src="/img/logo2.png" alt="altLogo" class="altLogo">
  </div>

  <div class="inputsCont">
    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" required>

    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" required>

    <button type="submit">Login</button>
  </div>

 <div class="btnCont" style="background-color:#f1f1f1">
    <span class="signIn">Don't have an account? <a href="register">Register</a></span>
  </div>
</form>