<form action="/loggedIn" method="get" class="loginForm">
  <div class="imgCont">
    <img src="/img/logo2.png" alt="altLogo" class="altLogo">
  </div>

  <div class="inputsCont">
    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" required>

    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" required>

    <button type="submit">Login</button>
    <label>
      <input type="checkbox" checked="checked" name="remember"> Remember me
    </label>
  </div>

  <div class="btnCont" style="background-color:#f1f1f1">
    <button type="button" class="cancelBtn"><a href="home"><span id="cancelLog">Cancel</span></a></button>
    <span class="password">Forgot <a href="#">password?</a></span>
  </div>
</form>